<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd">

	<!-- 集中加载配置文件 -->
	<bean id="propertyConfigurer"
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations">
			<list>
				<!-- zk -->
				<value>classpath:properties/zk/${envType}/init.properties
				</value>
			</list>
		</property>
	</bean>


	<bean id="zkBaseService" class="com.lenovo.wanba.zk.services.ZkBaseService">
		<constructor-arg>
			<value>${${serverName}.connectString}</value>
		</constructor-arg>
		<constructor-arg type="int">
			<value>${sessionTimeout}</value>
		</constructor-arg>
	</bean>

	<context:component-scan base-package="com.lenovo.wanba" />

	<import resource="applicationContext-security.xml" />
</beans>
